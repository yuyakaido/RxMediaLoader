<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuyakaido.android.rxmedialoader.sample">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light"
        android:requestLegacyExternalStorage="true">

        <activity android:name=".activity.ScopedMediaGridActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity" />

        <activity android:name=".activity.MediaGridActivity"/>

        <activity android:name=".activity.MediaPagerActivity"/>

    </application>

</manifest>